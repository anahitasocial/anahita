<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="##BUILD_PLATFORM_VERSION##" enforce="1" method="upgrade">
    <name>Actors</name>
    <author>Anahita Social Networking Platform and Framework</author>
    <copyright>Copyright (C) 2013 rmdStudio Inc. and Peerglobe Technology All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.htmlL</license>
    <authoremail>info@anahitapolis.com</authoremail>
    <authorurl>www.anahitapolis.com</authorurl>
    <description>This module displays a list of Actors.</description>
    <params>
        <param name="actor_ids" type="textarea" rows="3" cols="40" default="" label="MOD-ACTORS-IDS" description="MOD-ACTORS-IDS-DESC" />
        <param name="header_text" type="textarea" rows="3" cols="40" default="" label="Header Text" description="PARAMHEADERTEXT" />
        <param name="layout" type="list" default="grid" label="MOD-ACTORS-LAYOUT">
            <option value="grid">Grid</option>
            <option value="list">List</option>
        </param>
		<param name="sort" type="list" default="status_update" label="MOD-ACTORS-SORT">
            <option value="status_update">Latest Status Update</option>
            <option value="create_date">Creation Date</option>
			<option value="title">Title</option>
			<option value="order">Order Entered</option>
		</param>
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
    </params>
</install>